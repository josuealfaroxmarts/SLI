<openerp>
    <data>

    <act_window id="id_for_record"
    name="Actualizar viaje"
    res_model="wizard.viaje"
    src_model="trafitec.viajes"
    view_mode="form"
    key2="client_action_multi" target="new"
    groups=""/>
        
    <record id="actualizar_viaje" model="ir.ui.view">
            <field name="name">Viaje</field>
            <field name="model">wizard.viaje</field>
            <field name="arch" type="xml">
                <form>
                  <group>
                  <field name="asociado_id"/>
                  </group>
                    <field name="viajes_id">
                        <tree create="false" edit="false" delete="true">
                            <field name="name"/>
                            <field name="fecha_viaje"/>
                            <field name="cliente_id"/>
                            <field name="asociado_id"/>
                            <field name="placas_id"/>
                            <field name="origen"/>
                            <field name="destino"/>
                            <field name="tarifa_asociado"/>
                            <field name="flete_asociado"/>
                            <field name="tarifa_cliente"/>
                            <field name="flete_cliente"/>
                            <field name="tipo_viaje"/>
                            <field name="state"/>
                        </tree>
                    </field>
                  
                    <group col="10">
                  
                    <group position="before" colspan="7">
                    <notebook>
                      <page string="Carta porte">
                        <group>
                          <field name="factura_id"/>
                        </group>
                      </page>
                      <page string="Comisiones">
                        <group>
                          <field name="comisiones_id"/>
                        </group>
                      </page>
                      <page string="Descuentos">
                      </page>
                      <page string="Notas de cargo">
                      </page>
                    </notebook>
                    </group>
                  
                    <group position="after" colspan="3">
                          <field name="subtotal" widget="monetary"/>
                          <field name="iva" widget="monetary"/>
                          <field name="riva" widget="monetary"/>
                          <field name="total" widget="monetary"/>
                    </group>

                    </group>
                  
                    <footer>
                        <button name="actualiza_viajes" string="Actualizar ahora" type="object" class="oe_right oe_highlight"/>
                        <button name="" string="Cerrar ventana" special="cancel" class="oe_right"/>
                    </footer>
                </form>
            </field>
    </record>
    
        
    
    </data>
</openerp>