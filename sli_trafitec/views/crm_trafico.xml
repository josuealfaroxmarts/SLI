<openerp>
    <data>
        <record id="trafitec_crm_trafico_view" model="ir.ui.view">
            <field name="name">trafitec.crm.trafico.view</field>
            <field name="model">trafitec.crm.trafico</field>
            <field name="arch" type="xml">
                <tree string="Buscar viajes">
                    <field name="id"></field>
                    <field name="name"></field>
                    <field name="create_date"></field>
                </tree>
            </field>
        </record>

        <record id="trafitec_crm_trafico_asociados_kanban" model="ir.ui.view">
            <field name="name">trafitec.crm.trafico.asociados.kanban</field>
            <field name="model">res.partner</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">

                <kanban class="oe_background_grey o_kanban_dashboard o_salesteam_kanban" create="0">
                    <field name="name"/>
                    <templates>
                        <div t-name="kanban-box">
                            <div>
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <button class="trafitec_borde" type="object" name="action_abrir_contacto">
                                                <field name="name"/>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <a class="o_kanban_manage_toggle_button" href="#">Opciones
                                            <i class="fa fa-caret-down"/>
                                        </a>
                                    </div>
                                </div>
                                <div class="container o_kanban_card_content o_visible">
                                    <div class="row">
                                        <span class="col-xs-4">Teléfono celular</span>
                                        <span class="col-xs-8">
                                            <field name="mobile"/>
                                        </span>
                                    </div>

                                    <div class="row">
                                        <span class="col-xs-4">Teléfono fijo</span>
                                        <span class="col-xs-8">
                                            <field name="phone"/>
                                        </span>
                                    </div>

                                    <div class="row">
                                        <!--span class="col-xs-4">Correo electrónico</span> <span class="col-xs-8"><field name="email"/></span-->
                                        <span class="col-xs-4">Correo electrónico</span>
                                        <span class="col-xs-8">
                                            <field name="crmt_logistico_correo"/>
                                        </span>
                                    </div>

                                    <div class="row">
                                        <span class="col-xs-4">Número de unidades</span>
                                        <span class="col-xs-8">
                                            <field name="crm_trafico_numerounidades"/>
                                        </span>
                                        <span class="col-xs-4"></span>
                                        <span class="col-xs-8">
                                            <field name="crmt_unidades_txt"/>
                                        </span>
                                    </div>

                                    <div class="row">
                                        <span class="col-xs-4">Saldo de facturas</span>
                                        <span class="col-xs-8">
                                            <font color="blue">
                                                <field name="crm_trafico_saldo"/>
                                            </font>
                                            <button string="Ver facturas" name="action_abrir_facturas_asociado"
                                                    type="object" class="trafitec_button">Ver facturas
                                            </button>
                                        </span>
                                    </div>

                                    <div class="row">
                                        <span class="col-xs-4">Último rechazo</span>
                                        <span class="col-xs-8">
                                            <field name="crm_trafico_ultimo_rechazo_id"/>
                                        </span>
                                    </div>

                                    <div class="row">
                                        <span class="col-xs-4">Info</span>
                                        <span class="col-xs-8">
                                            <field name="crm_trafico_info"/>
                                        </span>
                                    </div>

                                    <div class="row">
                                        <span class="col-xs-12 trafitec_borde">
                                            <font color="silver">ULTIMO CONTACTO</font>
                                        </span>
                                        <span class="col-xs-6">Fecha y hora:</span>
                                        <span class="col-xs-6">
                                            <field name="crm_trafico_ultimocontacto_fechahora"/>
                                        </span>
                                        <span class="col-xs-6">Usuario:</span>
                                        <span class="col-xs-6">
                                            <field name="crm_trafico_ultimocontacto_usuario_id"/>
                                        </span>
                                        <span class="col-xs-6">Días:</span>
                                        <span class="col-xs-6">
                                            <field name="crm_trafico_ultimocontacto_dias_transcurridos"/>
                                        </span>
                                    </div>

                                    <div class="row">
                                        <span class="col-xs-12">
                                            <field name="crm_trafico_ultimos_registros_info1"/>
                                        </span>
                                    </div>
                                    <div class="row">
                                        <span class="col-xs-12">
                                            <field name="crm_trafico_ultimos_registros_info2"/>
                                        </span>
                                    </div>

                                </div>


                                <!--INVISIBLE INICIALMENTE-->
                                <div class="container o_kanban_card_manage_pane o_invisible">
                                    <div class="row">
                                        <span class="col-xs-12">
                                            <button string="Marca como contactado" name="action_marcar_contactado"
                                                    type="object" class="trafitec_button">Marcar como contactado
                                            </button>
                                        </span>
                                    </div>
                                    <div class="row">
                                        <span class="col-xs-12">
                                            <button string="Ver calendario" name="action_vercalendario" type="object"
                                                    class="trafitec_button">Ver calendario
                                            </button>
                                        </span>
                                    </div>
                                    <div class="row">
                                        <span class="col-xs-12">
                                            <button string="Ver viajes" name="action_abrir_viajes_asociado"
                                                    type="object" class="trafitec_button">Ver viajes
                                            </button>
                                        </span>
                                    </div>
                                    <div class="row">
                                        <span class="col-xs-12">
                                            <button string="Ver contactos" name="action_abrir_contactos" type="object"
                                                    class="trafitec_button">Ver contactos
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </templates>
                </kanban>
            </field>
        </record>


        <!--**********************************************************************-->
        <!--Asociados recomendador por el usuario-->
        <!--**********************************************************************-->
        <record id="trafitec_crm_recomendar_form" model="ir.ui.view">
            <field name="name">trafitec.crm.recomendar.form</field>
            <field name="model">trafitec.crm.asociados</field>
            <field name="arch" type="xml">
                <form create="false">
                    <sheet>
                        <group>
                            <group string="Buscar asociados" colspan="2">
                                <field name="cotizacion_id" invisible="1"></field>
                                <field name="linea_id" invisible="1"></field>

                                <field name="buscar_nombre" invisible="0"></field>
                                <field name="buscar_tiporemolque" invisible="0" options="{'no_create_edit': True,'no_open': True,'no_create':True,'no_quick_create ':True}"></field>
                                <field name="buscar_estado" invisible="0" options="{'no_create_edit': True,'no_open': True,'no_create':True,'no_quick_create ':True}"></field>
                            </group>
                            <group>
                                <button string="Buscar asociados" type="object" name="action_buscar_asociados" class="btn-primary"/>
                                <button string="Quitar asociados" type="object" name="action_quitar_asociados" class="btn-danger"/>
                            </group>
                            <group string="Asociados encontrados" colspan="2">
                                <field name="asociado_id" domain="[('asociado','=',True)]">
                                    <tree>
                                        <field name="id" invisible="1"></field>
                                        <field name="name"></field>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="trafitec_crm_tree" model="ir.ui.view">
            <field name="name">trafitec.crm.tree</field>
            <field name="model">trafitec.crm.asociados</field>
            <field name="arch" type="xml">
                <tree edit="true" create="false">
                    <field name="cotizacion_id" invisible="0"></field>
                    <field name="linea_id" invisible="0"></field>
                    <field name="asociado_id"></field>
                    <field name="create_uid" string="Creado por"></field>
                    <field name="create_date" string="Creado en"></field>
                </tree>
            </field>
        </record>

        <record id="trafitec_crm_search" model="ir.ui.view">
            <field name="name">trafitec.crm.search</field>
            <field name="model">trafitec.crm.asociados</field>
            <field name="arch" type="xml">
                <search>
                    <field name="cotizacion_id" invisible="0"></field>
                    <field name="linea_id" invisible="0"></field>
                    <field name="asociado_id"></field>
                    <field name="create_uid" string="Creado por"></field>
                    <field name="create_date" string="Creado en"></field>
                </search>
            </field>
        </record>
        <!--**********************************************************************-->
        <!--
        -->
        <record id="trafitec_crm_trafico_form" model="ir.ui.view">
            <field name="name">trafitec.crm.trafico.form</field>
            <field name="model">trafitec.crm.trafico</field>
            <field name="arch" type="xml">
                <form string="CRM Trafico">
                    <group>
                        <field name="name"/>
                        <field name="calculado" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="Cotizaciones disponibles">
                            <b style="padding:5px;">
                                <font color="silver">En esta ventana se muestran solo las cotizaciones disponibles.
                                </font>
                            </b>
                            <hr/>
                            <button string="Buscar" name="action_buscar_cotizaciones2" type="object"
                                    class="btn-primary"/>
                            <field name="cotizaciones_abiertas_id" context="{'group_by': 'cotizacion_id'}">
                                <tree create="false" widget="one2many_list" edit="false" delete="false"
                                      context="{'group_by': 'cotizacion_id'}"
                                      colors="red:semaforo_valor=='rojo';green:semaforo_valor=='verde';orange:semaforo_valor=='marillo'">
                                    <!--field name="id"/-->
                                    <button string="Semaforo rojo" icon="fa-circle" class="btn-default"
                                            name="semaforo_rojo"
                                            attrs="{'invisible': [('semaforo_valor', '!=', 'rojo')]}"/>

                                    <field name="cotizacion_id"/>
                                    <field name="cotizacion_linea_xid"/>
                                    <field name="fecha"/>
                                    <field name="origen"/>
                                    <field name="destino"/>
                                    <field name="producto"/>
                                    <field name="tarifa_a" avg="Promedio de tarifa"/>
                                    <field name="cliente"/>
                                    <field name="usuarios_asignados"/>
                                    <field name="peso" sum="Total"/>
                                    <field name="peso_viajes" sum="Total viajes"/>
                                    <field name="avance" widget="progressbar"/>
                                    <field name="detalles"/>
                                    <field name="semaforo_valor"/>
                                    <field name="lineanegocio"/>
                                    <field name="estado"/>
                                    <!--button string="Enviar datos al cliente" type="object" name="action_enviar_info_cliente" class="btn-primary" confirm="¿Enviar datos al cliente?"></button-->
                                    <button string="Recomendar asociado" type="object"
                                            name="action_asociados_recomendar" class="btn-primary"></button>
                                    <button string="Ver asociados recomendados" type="object"
                                            name="action_asociados_recomendados" class="btn-primary"></button>

                                </tree>
                            </field>

                        </page>
                        <page string="Buscar viajes">
                            <group>
                                <group colspan="2" class="trafitec_borde">
                                    <group>
                                        <field name="buscar_folio"/>
                                        <field name="buscar_producto"/>
                                        <field name="buscar_origen"/>
                                        <field name="buscar_destino"/>
                                    </group>
                                    <group>
                                        <field name="buscar_cliente"/>
                                        <field name="buscar_asociado"/>
                                        <field name="buscar_fechai"/>
                                        <field name="buscar_fechaf"/>
                                        <field name="buscar_lineanegocio_id"
                                               options="{'no_create_edit': True,'no_open': True,'no_create':True,'no_quick_create ':True}"/>
                                        <button string="Buscar" name="action_buscar_viajes" type="object"
                                                class="btn-primary"/>
                                    </group>
                                    <group>
                                        <field name="viajes_info"/>
                                    </group>
                                </group>
                                <hr/>
                                <group colspan="2">
                                    <field name="resultados_id">
                                        <tree create="false" edit="false" delete="false">
                                            <!--field name="id"/-->
                                            <field name="viaje_id"/>
                                            <field name="fecha"/>
                                            <field name="origen" widget="template_name"/>
                                            <field name="destino"/>
                                            <field name="producto"/>
                                            <field name="asociado"/>
                                            <field name="tarifa_a" avg="Promedio de tarifa"/>
                                            <field name="cliente"/>
                                            <field name="peso" sum="Total movido"/>
                                            <field name="estado"/>
                                        </tree>
                                    </field>
                                </group>
                            </group>
                        </page>

                    </notebook>
                </form>
            </field>
        </record>


        <record id="trafitec_crm_trafico_action" model="ir.actions.act_window">
            <field name="name">CRM Trafico</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trafitec.crm.trafico</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="auto_search">true</field>
            <field name="limit">10</field>
        </record>
        <!--*********************************************************
        CRM TRAFICO REGISTRO
        *********************************************************-->
        <record id="trafitec_crm_trafico_registro_tree" model="ir.ui.view">
            <field name="name">trafitec.crm.trafico.registro.tree</field>
            <field name="model">trafitec.crm.trafico.registro</field>
            <field name="arch" type="xml">
                <tree string="Buscar registro" create="false" edit="false" delete="false" copy="false">
                    <field name="id"></field>
                    <field name="tipo"></field>
                    <field name="create_uid" string="Usuario"></field>
                    <field name="create_date" string="Fecha y hora de registro"></field>
                    <field name="asociado_id"></field>
                    <field name="detalles"></field>
                    <field name="cotizacion_id"></field>
                    <field name="viajes_n"></field>
                    <field name="state"></field>
                </tree>
            </field>
        </record>

        <record id="trafitec_crm_trafico_registro_calendar" model="ir.ui.view">
            <field name="name">trafitec.crm.trafico.registro.calendar</field>
            <field name="model">trafitec.crm.trafico.registro</field>
            <field name="arch" type="xml">
                <calendar string="Buscar registro" create="false" edit="false" delete="false" copy="false"
                          date_start="generar_evento_fechahora" date_stop="generar_evento_fechahora">
                    <field name="id"></field>
                    <field name="tipo"></field>
                    <field name="create_uid" string="Usuario"></field>
                    <field name="create_date" string="Fecha y hora de registro"></field>
                    <field name="asociado_id"></field>
                    <field name="detalles"></field>
                    <field name="cotizacion_id"></field>
                    <field name="viajes_n"></field>
                    <field name="state"></field>
                </calendar>
            </field>
        </record>

        <record id="trafitec_crm_trafico_registro_pivot" model="ir.ui.view">
            <field name="name">trafitec.crm.trafico.registro.pivot</field>
            <field name="model">trafitec.crm.trafico.registro</field>
            <field name="arch" type="xml">
                <pivot string="Tabla registro">
                    <field name="create_uid" string="Usuario" type="row"></field>
                    <field name="tipo" type="col"></field>
                </pivot>
            </field>
        </record>
        <record id="trafitec_crm_trafico_registro_graph" model="ir.ui.view">
            <field name="name">trafitec.crm.trafico.registro.graph</field>
            <field name="model">trafitec.crm.trafico.registro</field>
            <field name="arch" type="xml">
                <graph string="Grafico registro">
                    <field name="create_uid" string="Usuario" type="row"></field>
                    <field name="tipo" type="col"></field>
                </graph>
            </field>
        </record>

        <record id="trafitec_crm_trafico_registro_form" model="ir.ui.view">
            <field name="name">trafitec.crm.trafico.registro.form</field>
            <field name="model">trafitec.crm.trafico.registro</field>
            <field name="arch" type="xml">
                <form string="Nuevo registro de contacto" create="false" delete="false" copy="false">
                    <sheet>
                        <group>
                            <group colspan="2">
                                <field name="asociado_id_txt"/>
                                <field name="cotizacion_id_txt"/>
                            </group>
                            <group>
                                <field name="tipo" attrs="{'readonly': [('seg_modificar', '=', False)]}"></field>
                                <field name="detalles" attrs="{'readonly': [('seg_modificar', '=', False)]}"></field>
                            </group>
                            <group>
                                <field name="generar_evento_st"
                                       attrs="{'readonly': [('seg_modificar', '=', False)]}"></field>
                                <!--field name="generar_evento_dias" attrs="{'invisible': [('generar_evento_st', '=', False)]}"></field-->
                                <field name="generar_evento_fechahora"
                                       attrs="{'invisible': [('generar_evento_st', '=', False)]}"></field>
                            </group>
                            <group colspan="2">
                                <field name="state" attrs="{'readonly': [('seg_modificar', '=', False)]}"></field>
                            </group>
                            <group colspan="2">
                                <notebook>
                                    <page string="Rechazado" attrs="{'invisible': [('state', '!=', 'rechazado')]}">
                                        <group>
                                            <field name="motivo_rechazo_id"
                                                   domain="[('aplica_crm_trafico_rechazo','=',True)]"
                                                   attrs="{'readonly': [('seg_modificar', '=', False)], 'invisible': [('state', '!=', 'rechazado')]}"
                                                   options="{'no_create_edit': True,'no_open': True,'no_create':True,'no_quick_create ':True}"/>
                                        </group>
                                    </page>
                                    <page string="Aceptado" attrs="{'invisible': [('state', '!=', 'aceptado')]}">
                                        <group>
                                            <field name="tarifa"
                                                   attrs="{'readonly': [('seg_modificar', '=', False)], 'invisible': [('state', '!=', 'aceptado')]}"/>
                                            <!--field name="viajes_id" widget="one2many_list" attrs="{'readonly': [('seg_modificar', '=', False)], 'invisible': [('state', '!=', 'aceptado')]}">
                                            <tree editable="bottom" options="">
                                                   <field name="viaje_id" domain="[('crm_trafico_registro_id','=',False)]" options="{'no_create_edit': True,'no_open': True,'no_create':True,'no_quick_create ':True}"></field>
                                                </tree>
                                            </field-->
                                        </group>
                                    </page>
                                </notebook>
                            </group>
                            <group colspan="2">
                                <hr class="trafitec_hr"></hr>
                                <br/>
                                <field name="seg_modificar"
                                       groups="sli_trafitec.sli_trafitec_crm_trafico_administrador"></field>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="trafitec_crm_trafico_registro_search" model="ir.ui.view">
            <field name="name">trafitec.crm.trafico.registro.search</field>
            <field name="model">trafitec.crm.trafico.registro</field>
            <field name="arch" type="xml">
                <search string="Buscar registro">
                    <field name="id"></field>
                    <field name="create_date"></field>
                    <field name="tipo"></field>
                    <field name="detalles"></field>
                    <field name="create_uid"></field>
                </search>
            </field>
        </record>

        <record id="trafitec_crm_trafico_action_registro" model="ir.actions.act_window">
            <field name="name">CRM Trafico registro</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trafitec.crm.trafico.registro</field>
            <field name="view_mode">tree,pivot,graph,calendar,form</field>
            <field name="auto_search">true</field>
            <field name="limit">10</field>
        </record>

        <record id="trafitec_crm_trafico_tablero_kanban" model="ir.ui.view">
            <field name="name">trafitec.crm.trafico.tablero.kanban</field>
            <field name="model">trafitec.crm.trafico.tablero</field>
            <field name="arch" type="xml">
                <kanban create="0">
                    <templates>
                        <div t-name="kanban-box"> <!-- Use <t> tag instead of <span> for color change -->
