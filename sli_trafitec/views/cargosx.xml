<odoo>
    <data>
    <record id="view_cargosx_comisiones_buscar" model="ir.ui.view">
            <field name="name">view.cargosx.comisiones.buscar</field>
            <field name="model">trafitec.cargosx</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="id"/>
                    <field name="asociado_id"/>
                    <field name="proveedor_id"/>
                    <field name="asociado_id"/>
                    <field name="viaje_id"/>
                    <field name="saldo"/>
                    <newline/>
                    <group expand="0" string="Agrupar por">
                         <filter string="Asociado" icon="terp-partner" domain="[]" context="{'group_by':'asociado_id'}"/>
                        <separator orientation="vertical"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_cargosx_comisiones_form" model="ir.ui.view">
            <field name="name">view.cargosx.comisiones.form</field>
            <field name="model">trafitec.cargosx</field>
            <field name="arch" type="xml">
                <form string="Cargos">
                    <sheet>
                        <group >
                            <group >
                                <field name="viaje_id"/>
                                <field name="asociado_id" />
                                <field name="proveedor_id" attrs="{'invisible': [('tipo','=','comision')]}"/>
                                <field name="viaje_id" />
                                <field name="total" attrs="{'readonly': [('tipo','=','comision')]}"/>
                                <field name="abonos" />
                                <field name="saldo" />
                                <field name="observaciones" />
                                <field name="tipo" attrs="{'readonly': [('tipo','=','comision')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_cargosx_comisiones_tree" model="ir.ui.view">
            <field name="name">view.cargosx.comisiones.tree</field>
            <field name="model">trafitec.cargosx</field>
            <field name="arch" type="xml">
                <tree string="Descuentos">
                            <field name="id"/>
                            <field name="viaje_id"/>
                            <field name="asociado_id"/>
                            <field name="proveedor_id"/>
                            <field name="total" />
                            <field name="abonos"/>
                            <field name="saldo" />
                            <field name="tipo"/>
                            <field name="observaciones"/>
                </tree>
            </field>
        </record>

        <record id="cargosx_comisiones_action_generic" model="ir.actions.act_window">
            <field name="name">Comisiones X</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trafitec.cargosx</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('tipo','=','comision')]</field>
            <field name="auto_search">true</field>
            <field name="limit">10</field>
        </record>


        <record id="cargosx_descuentos_action_generic" model="ir.actions.act_window">
            <field name="name">Descuentos X</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trafitec.cargosx</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('tipo','=','descuento')]</field>
            <field name="auto_search">true</field>
            <field name="limit">10</field>
        </record>

    
    </data>
</odoo>