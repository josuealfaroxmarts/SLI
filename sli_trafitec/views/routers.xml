     <data>
          <record model="ir.ui.view" id="view_routers_from">
              <field name="name">view.routers.form</field>
              <field name="model">trafitec.routers</field>
              <field name="arch" type="xml">
                  <form string="description">
                      <sheet>
                          <group>
                            <group string="InformaciÃ³n del viaje">
                                <field name="shipment_id_fletex"/>
                                <field name="shipment_id_odoo"/>
                                <field name="associated_id"/>
                                <field name="quotation_id"/>
                             </group>
                              <group string="Google Maps">
                                  <field name="google_maps" widget="url"/>
