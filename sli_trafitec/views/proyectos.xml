<odoo>
    <data>

    <record id="sli_proyectos_tareas" model="ir.ui.view">
            <field name="name">sli.proyectos.tareas</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='date_deadline']" position="attributes">
                     <attribute name="attrs">{'readonly':[('bloquear_fechalimite','=',True)]}</attribute>
              </xpath>
            </field>
    </record>

    <record id="sli_proyectos_tareas_opciones" model="ir.ui.view">
            <field name="name">sli.proyectos.tareas.opciones</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
              <xpath expr="//sheet/notebook/page[@name='description_page']" position="after">
                <page name="sli_proyectos_pagina_opciones" string="SLI Opciones" groups="sli_trafitec.sli_trafitec_sistemas">
                   <group>
                     <field name="bloquear_fechalimite"></field>
                   </group>
                </page>
              </xpath>
            </field>
    </record>
    
    </data>
</odoo>