<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="automatic_detection_of_overdue_invoices_for_the_credit_limit" model="ir.cron">
		    <field name="name">Automatic detection of overdue invoices for the credit limit</field>
		    <field name="user_id" ref="base.user_root" />
		    <field name="interval_number">1</field>
		    <field name="interval_type">days</field>
		    <field name="numbercall">-1</field>
		    <field name="doall" eval="False"/>
		    <field name="model" eval="'account.invoice'"/>
		    <field name="function" eval="'run_revision_due_invoices'"/>
		    <field name="active" eval="True"/>
		</record>
    </data>
</odoo>