<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data noupdate="0">

<!--############################################  Menu Padre De la Seguridad  ####################################################-->
        <record model="ir.module.category" id="fleet_mro_category">
            <field name="name">Fleet MRO Security</field>
            <field name="description">Fleet MRO Security</field>
            <field name="sequence">2</field>
        </record>


<!--############################################ Seguridad Para Admin  ####################################################-->

    <!--################## Grupos ############-->
    <record id="fleet_mro_admin" model="res.groups">
        <field name="name">Fleet MRO Manager</field>
        <field name="category_id" ref="fleet_mro_category"/>
        <field name="comment">The user is Fleet MRO Manager.</field>
    </record>

    <!--################## Grupos ############-->
    <record id="fleet_mro_owner" model="res.groups">
        <field name="name">Fleet MRO Administrador</field>
        <field name="category_id" ref="fleet_mro_category"/>
        <field name="comment">The user is Fleet MRO administrador.</field>
    </record>
    
    <!--################## Grupos ############-->
    <record id="fleet_mro_user" model="res.groups">
        <field name="name">Fleet MRO User</field>
        <field name="category_id" ref="fleet_mro_category"/>
        <field name="comment">The user is Fleet MRO User.</field>
    </record>    


    <!--################## Menus ############-->
    <record model="ir.ui.menu" id="menu_tms_order_manager">
        <field name="name">Security for Menu Fleet MRO Order Manager</field>
        <field eval="[(4, ref('fleet_mro_admin')),(4, ref('fleet_mro_user'))]" name="groups_id"/>
    </record>


<!--############################################ Seguridad Para Mecanicos  ####################################################-->

    <!--################## Grupos ############-->
    <record id="fleet_mro_kiosk" model="res.groups">
        <field name="name">User Mechanics Fleet MRO</field>
        <field name="category_id" ref="fleet_mro_category"/>
    </record>

    <record id="fleet_mro_kiosk_rule" model="ir.rule">
        <field name="name">See only assigned Maintenance Order Tasks</field>
        <field ref="model_fleet_mro_order_task_time" name="model_id"/>
        <field name="domain_force">[('hr_employee_user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('fleet_mro_kiosk'))]"/>
    </record>

    <!--################## Menus ############-->
    <record model="ir.ui.menu" id="menu_fleet_mro_kiosk">
        <field name="name">Men√∫ Kiosko</field>
        <field eval="[(4, ref('fleet_mro_kiosk'))]" name="groups_id"/>
    </record>

    
    
<!-- TMS.MRO.DIVER_REPORT -->
    <record id="fleet_mro.group_report_confirm" model="res.groups">
        <field name="name">Can Confirm Driver Report of Vehicle Failure</field>
        <field name="category_id" ref="fleet_mro_category"/>
        <field name="comment">The user will be able to Confirm Driver Report of Vehicle Failure.</field>
    </record>
    <record id="fleet_mro.group_report_cancel" model="res.groups">
        <field name="name">Can Cancel Driver Report of Vehicle Failures</field>
        <field name="category_id" ref="fleet_mro_category"/>
        <field name="comment">The user will be able to Cancel Driver Report of Vehicle Failure.</field>
    </record>
    <record id="fleet_mro.group_report_setdraft" model="res.groups">
        <field name="name">Can Set to Draft Driver Report of Vehicle Failure</field>
        <field name="category_id" ref="fleet_mro_category"/>
        <field name="comment">The user will be able to Set to Draft Driver Report of Vehicle Failure.</field>
    </record>
    


</data>
</openerp>
