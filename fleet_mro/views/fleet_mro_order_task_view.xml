<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>	

        <record id="fleet_mro_order_task_time_pause_wizard" model="ir.ui.view">
            <field name="name">hr.employee.mro_productive.wizard</field>
            <field name="model">hr.employee.mro_productive.wizard</field>
            <field name="arch" type="xml">
                <form string="Pause Task?">
                    <group col="4" colspan="4">
						<field name="order_id"/>
						<field name="task_id"/>
                        <field name="type" default_focus="1"/>
                        <field name="control_time_id" />
						<field name="note" nolanel="1" placeholder="Notes..." colspan="4" />
                    </group>
                    <footer>
                        <button string="Pause Task" name="pause_task" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_fleet_mro_order_task_time_pause_wizard" model="ir.actions.act_window">
          <field name="name">Pause Task</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">hr.employee.mro_productive.wizard</field>
          <field name="view_type">form</field>
          <field name="view_mode">form</field>
          <field name="target">new</field>
        </record>    
        
        
        
############################################################################################################################
			### Assign Manpower to Tasks ###

        <record id="view_fleet_mro_order_task_assing_manpower" model="ir.ui.view">
          <field name="name">Assign Manpower to Tasks</field>
          <field name="model">fleet.mro.order.task.assing_manpower</field>
          <field name="type">form</field>
          <field name="arch" type="xml">
	        <form string="Assign Manpower">
                <separator colspan="4" string="Please select Mechanic or Thecnical Staff to assign to selected Tasks" />
                <group colspan="4" col="4">
		    <separator string="Mechanics or Thecnical Staff" colspan="4" />
                    <field name="mechanic_ids" colspan="4" nolabel="1"/>
		    <p colspan="4">
Please note that:<br/> 
* Selected Tasks must be in Pending and Process State<br/>
* If selected manpower is already assign to Task, it will not be assigned double.<br/>
			</p>
                </group>
                <footer>
                    <button name="assign_manpower" string="Assign Manpower" colspan="1" type="object"   />
                    or
                    <button special="cancel" string="Cancel" class="oe_link"/>
                
                </footer>
	        </form>
          </field>
        </record>

                            ### ACTION ###
    <act_window name="Assign Manpower to Selected Tasks"		    
		res_model="fleet.mro.order.task.assing_manpower"
		src_model="fleet.mro.order.task"
		view_mode="form"
		target="new"
		key2="client_action_multi"    
		id="action_fleet_mro_order_task_assing_manpower"/>	

        
        
############################################################################################################################
                            ### FORM ###
        <record model="ir.ui.view" id="fleet_mro_order_task_form">
            <field name="name">fleet.mro.order.task.form</field>
            <field name="model">fleet.mro.order.task</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="MRO Order Task" >
                    <header>
                        <button string="Process"  name="action_process"  states="pending"  type="object" />  
                        <button string="Done"     name="action_done"     states="process"  type="object" /> 
                        <button string="Cancel"   name="action_cancel"   states="pending"  type="object" />
                        <field                    name="state" widget="statusbar" statusbar_visible="pending,process,done"/>
                    </header>
                    <sheet>
                        <!--<div class="oe_button_box" name="button_box">
                            <button name="action_view_purchase_orders" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                                <field name="purchase_order_count" widget="statinfo" string="External"/>
                            </button>
                            <button name="action_view_task_times" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                                <field name="time_records_count" widget="statinfo" string="Time Sheets"/>
                            </button>
                            <button name="action_view_pickings" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                                <field name="stock_pickings_count" widget="statinfo" string="Pickings"/>
                            </button>
                        </div>                    -->
                        <h1>
                            <field name="task_id" attrs="{'readonly':[('state','in',('process','done','cancel'))]}" 
                                   nolabel="1" class="oe_inline" options="{'no_create': True}"/>
                        </h1>
                        <field name="name" colspan="4" nolabel="1"/>
                        <group>
                            <group>
                                <field name="product_uom_qty" />
                                <field name="product_uom" />
                                <field name="price_unit" attrs="{'invisible':[('internal_repair','=',True)]}"/>
                                <field name="tax_id" widget="many2many_tags" attrs="{'invisible':[('internal_repair','=',True)]}"/>
                                <field name="price_subtotal" attrs="{'invisible':[('internal_repair','=',True)]}"/>  
                                <field name="price_total" attrs="{'invisible':[('internal_repair','=',True)]}"/>
                            </group>
                            <group>
                                <separator string="Mechanics Assignment" colspan="2" />
                                <field name="mechanic_ids" colspan="4" options="{'no_create': True}" nolabel="1"
                                       widget="many2many_tags"
                                       attrs="{'readonly':[('state','in',('done', 'process','cancel'))]}" />
                            </group>                        
                        </group>                            
                            <notebook >
                                <page string="Task Summary">
                                    <group>
                                        <group>
                                            <separator string="Costs" colspan="2" />
                                            <field name="cost_service" />
                                            <field name="cost_service_external"  />
                                            <field name="parts_cost" />
                                            <field name="parts_cost_external" />
                                            <label string=".·.·.·.·.·.·.·.·.·.·.·.·.·.·.·.·"/><newline />
                                            <field name="cost_all" />
                                            <label string=".·.·.·.·.·.·.·.·.·.·.·.·.·.·.·.·"/><newline />
                                            <field name="order_id"/>
                                            <field name="state_order"/>
                                        </group>
                                        <group>
                                            <separator string="Time Statistics" colspan="2" />
                                            <field name="date_start" attrs="{'readonly':[('state','in',('process','done','cancel'))]}" />
                                            <field name="date_end" attrs="{'readonly':[('state','in',('process','done','cancel'))]}" />
                                            <field name="hours_estimated"  widget="float_time"/>
                                            <field name="date_start_real" />
                                            <field name="date_end_real" />
                                            <field name="hours_real" widget="float_time" />
                                            <label string=".·.·.·.·.·.·.·.·.·.·.·.·.·.·.·.·"/><newline />
                                            <field name="internal_repair"/>
                                            <field name="operating_unit_id"/>
                                        </group>
                                    </group>
                                </page>
                                <page string="Tasks and Times by Mechanic">
                                    <field name="control_time_ids" colspan="4" nolabel="1" readonly="1"
                                           attrs="{'readonly':[('state_order','in',('done','cancel'))]}" 
                                           domain="[('state', '!=', 'cancel')]">
                                        <tree>
                                            <field name="hr_employee_id" />                                            
                                            <field name="date_start" />
                                            <field name="date_end" />
                                            <field name="hours_mechanic" widget="float_time"/>
                                            <field name="state" />
                                            <button string="Start"    name="action_start"   states="draft"    type="object" />
                                            <button string="Pause" name="%(action_fleet_mro_order_task_time_pause_wizard)d" type="action" 
                                                    context="{'default_control_time_id': id}" states="process" />
                                            <!--<button string="Pause"    name="action_pause"   states="process"  type="object" />-->
                                            <button string="Continue" name="action_process" states="pause"    type="object" />
                                            <button string="End"      name="action_done"     states="process"  type="object" />
                                        </tree>
                                    </field>
                                </page>
                                <page string="Spare Parts" attrs="{'invisible':[('stock_move_ids','=',False)]}">
                                    <field name="stock_move_ids" colspan="4" nolabel="1"
                                        readonly="1"
                                        context="{'default_mro_order_id':order_id, 'default_task_id':id}">
                                        <tree string="Stock Moves">
                                            <field name="picking_id"/>
                                            <field name="name"/>
                                            <field name="date_expected"/>
                                            <field name="date"/>
                                            <field name="product_id"/>
                                            <field name="product_uom_qty"/>
                                            <field name="price_unit"/>
                                            <field name="location_id"/>
                                            <field name="location_dest_id"/>
                                            <field name="state"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="External Workshop Detailed" 
                                      attrs="{'invisible':[('purchase_order_line_ids','=',False)]}">
                                    <field name="purchase_order_line_ids" colspan="4" nolabel="1" readonly="1">
                                        <tree>
                                            <field name="sequence" widget="handle"/>
                                            <field name="partner_id" />
                                            <field name="order_id" />
                                            <field name="name" />
                                            <field name="product_id" invisible="1"/>
                                            <field name="product_qty" />
                                            <field name="qty_received" />
                                            <field name="qty_invoiced" />
                                            <field name="product_uom" />
                                            <field name="price_unit" />
                                            <field name="price_subtotal" sum="xSubTotal"/>
                                            <field name="price_tax" sum="xTaxes"/>
                                            <field name="price_total" Sum="xTotal"/>
                                            <field name="state" />
                                        </tree>
                                    </field>
                                </page>
                                <page string="More Info">
                                
                                </page>
                            </notebook>
                            
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/> 
                    </div>
                </form>
	       </field>
        </record>

############################################################################################################################
                            ### TREE VENTAS###
    <record model="ir.ui.view" id="fleet_mro_order_task_tree_general">
        <field name="name">fleet.mro.order.task.tree</field>
        <field name="model">fleet.mro.order.task</field>
        <field name="type">tree</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="Tasks" >
                <field name="sequence" widget="handle"/>
                <field name="order_id" />
                <field name="task_id" />
                <field name="name" />
                <field name="product_uom_qty" />
                <field name="product_uom" />
                <field name="price_unit" />
                <field name="price_subtotal" sum="subtotal"/>                
                <field name="tax_id" widget="many2many_tags"/>
                <field name="price_total" invisible="1"/>
                <field name="cost_all" sum="costs"/>
                <field name="vehicle_id" invisible="1"/>
                <field name="hours_estimated"  widget="float_time" sum="Sched_Time" />
                <field name="hours_real" widget="float_time" sum="Real_Time" />
                <field name="parts_cost" sum="Spare Parts" />
                <field name="cost_service" sum="Work Hand" />
                <field name="parts_cost_external" sum="Spare Parts External" />
                <field name="cost_service_external" sum="Work Hand External" />
                <field name="mechanic_ids" />
                <field name="operating_unit_id" invisible="1" />
                <field name="state" />
                <button string="Process"  name="action_process"  states="pending"  type="object" class="oe_highlight"
                        icon="fa-arrow-right" />
                <button string="Done"     name="action_done"     states="process"  type="object" class="oe_highlight"
                        icon="fa-sign-out" />
                <button string="Cancel"   name="action_cancel"   states="pending,process"  type="object" 
                        icon="fa-times-circle"/>
                <button string="External Workshop"   name="action_view_purchase_orders"   states="process"  type="object" 
                        icon="fa-pencil-square-o"/>
            </tree>
	    </field>
    </record>


############################################################################################################################
                            ### GRAPH ###
        <record id="view_fleet_mro_order_task_graph" model="ir.ui.view">
            <field name="name">fleet.mro.order.task.graph</field>
            <field name="model">fleet.mro.order.task</field>
            <field name="type">graph</field>
            <field name="arch" type="xml">
                <graph string="MRO Tasks" type="bar">
                    <field name="vehicle_id"/>
                    <field name="parts_cost" operator="+"/>
                    <field name="cost_service" operator="+"/>
                    <field name="parts_cost_external" operator="+"/>
                    <field name="cost_service_external" operator="+"/>
                </graph>
            </field>
        </record>
        
############################################################################################################################
                            ### CALENDAR ###
        <record id="view_mro_order_task_calendar" model="ir.ui.view">
            <field name="name">fleet.mro.order.task.calendar</field>
            <field name="model">fleet.mro.order.task</field>
            <field name="arch" type="xml">
              <calendar string="Tasks" color="state" date_start="date_start" date_stop="date_end">
                <field name="vehicle_id" />
                <field name="task_id" />
              </calendar>
            </field>
        </record>        

############################################################################################################################
                            ### SEARCH ###
    <record id="view_fleet_mro_order_task_filter" model="ir.ui.view">
      <field name="name">fleet.mro.order.task.search</field>
      <field name="model">fleet.mro.order.task</field>
      <field name="type">search</field>
      <field name="arch" type="xml">
        <search string="Search Service Order Tasks">
	    <field name="task_id" select="1"/>
            <field name="order_id" select="1"/>
	    <field name="vehicle_id" select="1"/>
	    <!--<field name="supplier_id" select="1"/>-->
          
            <separator/>
            <filter string="Pending" domain="[('state','=','pending')]" name="state_pending"/>
            <filter string="Process" domain="[('state','=','process')]" name="state_process"/>
            <filter string="Done" domain="[('state','=','done')]"/>
            <filter string="Cancel" domain="[('state','=','cancel')]"/>
            <separator/>
            <filter string="This month" domain="[('date_start','&gt;=', time.strftime('%%Y-%%m-01'))]" name="this_month" />
            <filter string="Without Workhand Assigned" domain="[('mechanic_ids','=',False)]"/>
    	    <separator />
            <filter string="With External Workshop" domain="[('cost_external','>',0)]"/>
	        <separator />
            <group expand="0" string="Group By..." >
                <filter string="Task" domain="[]" context="{'group_by':'task_id'}"/>
                <filter string="Service Order" domain="[]" context="{'group_by':'order_id'}"/>
                <filter string="Vehicle" domain="[]" context="{'group_by':'vehicle_id'}"/>
                <!--<filter string="Supplier" domain="[]" context="{'group_by':'supplier_id'}"/>-->
                <filter string="Workshop" domain="[]" context="{'group_by':'operating_unit_id'}"/>
                <separator orientation="vertical"/>
                <filter string="State" domain="[]" context="{'group_by':'state'}" name="groupby_state"/>
                <filter string="Period" domain="[]" context="{'group_by':'date_start'}"/>
            </group>
        </search>
      </field>
    </record>

############################################################################################################################
                            ### ACTION ###
    <record model="ir.actions.act_window" id="fleet_mro_order_task_action">
        <field name="name">Service Order Tasks</field>
        <field name="res_model">fleet.mro.order.task</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,calendar,graph</field>
        <field name="context">{'search_default_groupby_state': 1}</field>
    </record>    
############################################################################################################################
                            ### MENUS ###	
	<menuitem action="fleet_mro_order_task_action" id="menu_fleet_mro_order_task" name="Service Order Tasks"
              parent="menu_fleet_mro_orders" sequence="2" groups="fleet_mro_admin"/>
############################################################################################################################

    </data>
</openerp>
