############################################################################################################################	
	<menuitem action="fleet_mro_service_order_schedule_action" 
              id="menu_fleet_mro_service_order_schedule_action" 
              name="Work Agenda"
              parent="menu_fleet_mro_preorders" sequence="1" />

        
        
        
        
        <record id="fleet_mro_order_invoice_wizard_view" model="ir.ui.view">
            <field name="name">Create Customer Invoice</field>
            <field name="model">fleet.mro.order.invoice_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Customer Invoice">
                    <separator colspan="4" string="Are you sure you want to create Curstomer Invoice from selected MRO Service Orders?" />
                    <group colspan="4" col="4">
                    </group>
                    <footer>
                        <button name="button_create_invoices" string="Create Invoice" colspan="1" type="object"  class="oe_highlight" />
                        or
                        <button special="cancel" string="Cancel" class="oe_link"/>

                    </footer>
                </form>
            </field>
    </record>

                            ### ACTION ###
    <act_window name="Create Customer Invoice"
		res_model="fleet.mro.order.invoice_wizard"
		src_model="fleet.mro.order"
		view_mode="form"
		target="new"
		key2="client_action_multi"    
		id="fleet_mro_order_invoice_wizard_view_action"/>	
        
        
    </data>
</odoo>
