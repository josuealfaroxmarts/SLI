<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <template id="sli_custom_invoice_header">
      <!-- Multicompany -->
      <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"></t>
      </t>
      <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"></t>
      </t>

      <t t-if="o.company_id.id == 9">
        <div class="header">
          <div class="row" style="font-size: 12px;">
            <table style="width: 100%">
              <tr style="text-align: left;border-bottom:1px solid #AAAAAA;">

                <td style="width: 70%">
                  <span t-esc="company.name"/>
                </td>
              </tr>
            </table>
          </div>
        </div>
      </t>
      <t t-if="o.company_id.id != 9 and o.company_id.id != 1">
        <div class="header">
         <div class="row" style="font-size: 8px;">
           <table style="width: 100%">
             <tr style="text-align: center;border-bottom:1px dotted #AAAAAA;">
               <td style="width: 15%"><!--<t t-usertime="%Y-%m-%d %H:%M:%S" />-->
               Aqui va la fecha
             </td>
             <td style="width: 70%">
               <span t-esc="company.name"/>
             </td>
             <td style="width: 15%">
               <ul class="list-inline">
                 <li><span class="page"/></li>
                 <li>/</li>
                 <li><span class="topage"/></li>
               </ul>
             </td>
           </tr>
         </table>
       </div>
     </div>
   </t>
   <t t-raw="0" />
 </template>

 <template id="sli_reportc">
  <t t-call="sli_custom_invoice.sli_custom_invoice_header">
    <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
    <div class="page">
      <t t-if="o.company_id.id == 9">

        <table class="table table-condensed" style="font-size:12px;border: 1px solid #ddd;border-collapse: collapse;padding: 5px;">
          <tr>
            <td width="30%" align="left" valign="middle" style="border: 1px solid white;">
              <img t-if="o.company_emitter_id.logo" t-att-src="'data:image/png;base64,%s' % o.company_emitter_id.logo" style="max-height: 90px;height: auto;"/>
            </td>
            <td colspan="2" width="40%" align="left" valign="top" style="border: 1px solid white;">
              <strong>
                Emisor<BR/>                                
              </strong>
              <span t-field="o.company_emitter_id.partner_id.name"/><BR/>
              <span t-if="o.company_emitter_id.partner_id.vat"><span t-field="o.company_emitter_id.partner_id.vat_split"/></span><BR/>
              <strong>Regimen fiscal:</strong> <span t-field="o.company_emitter_id.partner_id.regimen_fiscal_id.name"/>
            </td>
            <td width="30%" valign="top" style="border: 1px solid white;text-align: left;">

              <strong>Folio: </strong><span t-field="o.number"/><BR/>
              <strong>Fecha: </strong><span t-field="o.invoice_datetime"/><BR/>
              <strong>Lugar de expedición: </strong><span t-field="o.address_issued_id.zip_sat_id.code"/><BR/> 
              <strong>Tipo de comprobante: </strong><span t-field="o.type_document_id"/> 

            </td>
          </tr>
        </table>
        <table class="table table-condensed" style="font-size:12px;border: 1px solid #ddd;border-collapse: collapse;padding: 5px;">
          <tr>

            <td colspan="2" width="100%" align="left" valign="top" style="border: 1px solid white;">
              <strong>Receptor </strong><BR/><span t-field="o.partner_id"/><BR/>
              <strong>RFC </strong><BR/><span t-field="o.partner_id.vat"/><BR/>
              Uso CFDI: <span t-field="o.uso_cfdi_id"/>
              <BR/>

            </td>
          </tr>
        </table>


        <table class="table table-condensed" style="font-size:12px">
          <thead>
            <tr>
              <th style="width:10%;text-align:center;">Clave producto</th>
              <th style="width:10%;" class="text-right">Cantidad</th>
              <th style="width:10%;text-align:center;">Unidad</th>
              <th style="width:15%;text-align:center;">Descripción</th>
              <th style="width:10%;" class="text-right">Precio Unitario</th>                        
              <th style="width:10%;" class="text-right">Importe</th>
              <th style="width:5%;" class="text-right">Impuesto</th>
              <th style="width:10%;" class="text-right">Tipo factor</th>
              <th style="width:10%;" class="text-right">Tasa cuota</th>
              <th style="width:10%;" class="text-right">Importe impuesto</th>
            </tr>
          </thead>                
          <tbody class="invoice_tbody">
            <tr t-foreach="o.invoice_line_ids" t-as="l">
              <td class="text-right"><span t-raw="'%s &lt;br&gt;' % l.product_id and l.product_id.sat_product_id.code or ''"/></td>
              <!--<td class="text-right"><span t-field="l.quantity"/></td>-->
              <td class="text-right">
                <span t-if="o.partner_id.id == 4995 and l.product_id.type == 'Servicio' ">1.000</span>
                <span t-if="o.partner_id.id != 4995 and l.product_id.type == 'Consumible'"><span t-field="l.quantity"/></span>
              </td>
              <td style="text-align:center;"><span t-field="l.uom_id.sat_uom_id"/></td>
              <td><!--<span t-field="l.name"/>-->
              <span t-raw="'%s &lt;br&gt;' % l.name if l.name.find('] ') &lt; 0 else l.name[l.name.find('] ')+2:]"/>
            </td>
            <td class="text-right"><span t-field="l.price_unit"/></td>
            <!--<td class="text-right"><span t-field="l.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/></td>-->
            <td class="text-right"><span t-field="l.price_subtotal"/></td>
            <td class="text-right">
              <t t-foreach="l.invoice_line_tax_ids" t-as="ll">
                <span t-field="ll.name"/><br/>
              </t>
            </td>
            <t t-set="cont" t-value="1"/>
            <t t-foreach="l.invoice_line_tax_ids" t-as="ll">
              <t t-if="cont==1">
                <td class="text-right"><span t-field="ll.sat_tasa_cuota"/></td>
              </t>
              <t t-set="cont" t-value="cont+1"/>
            </t>
            <t t-set="ivatax" t-value="0"/>
            <td class="text-right">
              <t t-foreach="l.invoice_line_tax_ids" t-as="ll">
                <span t-field="ll.amount"/><br/>
                <t t-set="ivatax" t-value="ivatax + ((ll.amount* l.price_subtotal)/100)"/>
              </t>
            </td>
            <td class="text-right" groups="sale.group_show_price_subtotal">
              <span t-esc="ivatax"/>
            </td>
          </tr>
        </tbody>
      </table>

      <div class="row col-xs-12" style="font-size:12px;">

        <div class="col-xs-12 pull-right">
          <table class="table" style="width:100%;">
            <tr>
              <td class="col-xs-8" style="border-top: 0px solid white; border-bottom: 0px solid white;"/>
              <td class="text-right col-xs-2" style="border-top: 1px solid black; border-bottom: 1px solid black;"><strong>SubTotal</strong></td>
              <td class="text-right col-xs-2" style="border-top: 1px solid black; border-bottom: 1px solid black;">
                <span t-field="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
              </td>

            </tr>
            <t t-set="conta" t-value="1"/>
            <tr t-foreach="o.tax_line_ids" t-as="t">
              <t t-if="conta==1">
               <td class="col-xs-8" style="text-align:left;height:1px;font-size:12px; border-top: 0px solid white; border-bottom: 0px solid white;">
                 <span t-field="o.name"/> 
               </td>
             </t>
             <t t-if="conta&gt;1">
               <td class="col-xs-8" style="text-align:left;height:1px;font-size:12px; border-top: 0px solid white; border-bottom: 0px solid white;">

               </td>
             </t>
             <td class="text-right col-xs-2" style="border-top: 1px solid black; border-bottom: 1px solid black;"><span t-field="t.tax_id.description"/></td>
             <td class="text-right col-xs-2" style="border-top: 1px solid black; border-bottom: 1px solid black;">
              <span t-field="t.abs_amount" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
            </td>
            <t t-set="conta" t-value="conta+1"/>
          </tr>
          <tr>
            <td class="col-xs-8" style="text-align:left;height:1px;font-size:12px; border-top: 0px solid white; border-bottom: 0px solid white;">
              <strong style="font-size:12px;"><span t-field="o.amount_to_text"/></strong>
            </td>
            <td class="text-right col-xs-2"><strong>Total</strong></td>
            <td class="text-right col-xs-2">
             <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
           </td>
         </tr>
       </table>
     </div>
   </div>

   <div name="reference"/>

   <table class="table table-condensed" style="font-size:12px;border: 1px solid #ddd;border-collapse: collapse;padding: 5px;">

    <tr>
      <td colspan="2" style="border-bottom: 1px solid;border-top: 1px solid;border-left: 1px solid;">
        <strong>Método de Pago: </strong><span t-field="o.metodo_pago_id"/><BR/>
        <span t-if="len(o.pay_method_ids) &gt; 1">
          <strong>Formas de Pago: </strong><span t-raw="'%s &lt;br&gt;' % o.pay_method_ids and ','.join(['[' + x.code + ' ' + x.name + '] - ' for x in o.pay_method_ids]) or o.pay_method_id.code or '99'"/><BR/>
        </span>
        <span t-if="len(o.pay_method_ids) == 1">
          <strong>Forma de Pago: </strong><span t-raw="'%s &lt;br&gt;' % o.pay_method_ids and ','.join(['[ ' + x.code + '] ' + x.name + ' ' for x in o.pay_method_ids]) or o.pay_method_id.code or '99'"/><BR/>
        </span>
        <strong>Moneda: </strong><span t-field="o.currency_id.name"/><BR/>   
        <strong>Tipo de Cambio: </strong><span t-if="o.tipo_cambio == 1.0">1</span><span t-if="o.tipo_cambio != 1.0"><span t-field="o.tipo_cambio"/></span><BR/>


      </td>
      <td colspan="2" style="border-bottom: 1px solid;border-top: 1px solid;border-right: 1px solid;">
        <strong>Regimen fiscal:</strong> <span t-field="o.company_emitter_id.partner_id.regimen_fiscal_id.name"/><BR/>
        <strong>Número del certificado: </strong><span t-field="o.no_certificado"/><br/>
        <strong>Certificado SAT: </strong><span t-field="o.cfdi_no_certificado"/><BR/>
        <strong>Folio Fiscal: </strong><span t-field="o.cfdi_folio_fiscal"/><BR/>
        <strong>Fecha y hora de certificación: </strong><span t-field="o.cfdi_fecha_timbrado"/>
      </td>
    </tr>
  </table>

  <table class="table table-condensed" style="font-size:12px">
    <tr>
      <td rowspan="3">
        <img t-if="o.cfdi_cbb" t-att-src="'data:image/png;base64,%s' % o.cfdi_cbb" style="width:5.5cm;height:5.5cm;"/>
      </td>
      <td><strong>Cadena Original del Complemento digital del SAT:</strong><BR/><span t-field="o.cfdi_cadena_original" style="display:block;width:500px;word-wrap:break-word;"/></td>
    </tr>
    <tr>
      <td><strong>Sello Digital del CFDI:</strong><BR/><span t-field="o.sello" style="display:block;width:500px;word-wrap:break-word;"/></td>
    </tr>
    <tr>
      <td><strong>Sello del SAT:</strong><BR/><span t-field="o.cfdi_sello" style="display:block;width:500px;word-wrap:break-word;"/></td>
    </tr>
  </table>
  <div align="center">
    <p style="font-size:12px;"><strong>ESTE DOCUMENTO ES UNA REPRESENTACION IMPRESA DE UN CFDI</strong></p>
  </div>


</t>

